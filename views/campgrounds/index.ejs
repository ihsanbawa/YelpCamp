<% include ../partials/header %>
    


    <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
            </p>
        </div>
    </header>
<div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular CampGrounds!</h3>
    </div>
</div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <% for(var x=0; x< campgrounds.length; x++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campgrounds[x].image%>" alt="">
                    <div class="caption">
                            <h4><strong><%=campgrounds[x].name%></strong></h4>
                    </div> 
                    <p>
                        <a href="/campgrounds/<%=campgrounds[x]._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        
        <% } %>
    </div>

</div>
<% include ../partials/footer %>